{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}
    {% set loc = app.request.get('_locale') %}
    <div class="copy-bottom white boxed"></div>
    <div class="lang-bottom white boxed">
        <div class="menu-lang">
            <a href="" class="active">Eng</a>
            <a href="">Fra</a>
            <a href="">Ger</a>
        </div>
    </div>
    <div class="pagepiling">
        <div class="pp-scrollable text-white section section-1">
            <div class="scroll-wrap">
                <div class="section-bg" style="background-image:url('{{ asset('images/bg/bg1.jpg') }}');"></div>
                <div class="scrollable-content">
                    <div class="vertical-centred">
                        <div class="boxed boxed-inner">
                            <div class="vertical-title hidden-xs hidden-sm"><span>Вступление</span></div>
                            <div class="boxed">
                                <div class="container">
                                    <div class="intro">
                                        <div class="row">
                                            <div class="col-md-8 col-lg-6">
                                                <p class="subtitle-top">Добро пожаловать<br></p>
                                                <h1 class="display-2 text-white"><span
                                                            class="text-primary">ВАШ</span> ВИД РОСКОШИ
                                                </h1>
                                                <div class="hr-bottom"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="pp-scrollable section section-2">
            <div class="scroll-wrap">
                <div class="scrollable-content">
                    <div class="vertical-centred">
                        <div class="boxed boxed-inner">
                            <div class="vertical-title text-dark hidden-xs hidden-sm"><span>что мы делаем</span></div>
                            <div class="boxed">
                                <div class="container">
                                    <div class="intro">
                                        <div class="row">
                                            <div class="col-md-5 col-lg-5">
                                                <p class="subtitle-top text-dark">Наша специализация</p>
                                                <h2 class="title-uppercase">Наша миссия<br> <span
                                                            class="text-primary">дизайн</span> лучшей мебели<br> для вас
                                                </h2>
                                                <ul class="service-list">
                                                    {% set increment = 1 %}
                                                    {% for service in services|sortbyfield('onHomePagePosition') %}
                                                        {% if service.isVisible == true %}
                                                            {% if service.isOnHomePage == true %}
                                                            <li><a href="{{ path('service', {'_locale': app.request.locale, 'url': service.url}) }}">{{ increment }}. {{ service.name }}</a></li>
                                                            {% set increment = increment + 1 %}
                                                            {% endif %}
                                                        {% endif %}
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                            <div class="col-md-6 col-lg-5 col-md-offset-1 col-lg-offset-2">
                                                <div class="dots-image-2">
                                                    <img alt="" class="img-responsive"
                                                         src="{{ asset('images/1-470x490.jpg') }}">
                                                    <div class="dots"></div>
                                                    <div class="experience-info">
                                                        <div class="number">24</div>
                                                        <div class="text">Года<br>опыта<br>работ</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="pp-scrollable text-white section section-3">
            <div class="scroll-wrap">
                <div class="bg-changer">
                    {% for product in products|sortbyfield('updatedAt') %}
                        {% if product.isVisible and product.isOnHomePage %}
                        {% if product.image is not null  %}
                        <div class="section-bg"
                             style="background-image:url('{{ vich_uploader_asset(product, 'imageFile') }}');"></div>
                    {% else %}
                        <div class="section-bg"
                             style="background-image:url('{{asset('images/bg/bg1.jpg')}}');"></div>
                        {% endif %}
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="scrollable-content">
                    <div class="vertical-centred">
                        <div class="boxed boxed-inner">
                            <div class="vertical-title hidden-xs hidden-sm"><span>Наши работы</span></div>
                            <div class="boxed">
                                <div class="container">
                                    <div class="intro">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h2 class="title-uppercase text-white">Последние проекты</h2>
                                                <div class="row-project-box row">
                                                    {% for product in products|sortbyfield('updatedAt')|reverse %}
                                                        {% if product.isVisible and product.isOnHomePage %}
                                                        <div class="col-project-box col-sm-6 col-md-4 col-lg-3">
                                                            <a href="{{ path('product', {'_locale': app.request.locale, 'url': product.url}) }}" class="project-box">
                                                                <div class="project-box-inner">
                                                                    <h5>{{ product.name }}</h5>
                                                                    <div class="project-category">{{ product.shortDescription }}</div>
                                                                </div>
                                                            </a>
                                                        </div>
                                                        {% endif %}
                                                    {% endfor %}
                                                </div>
                                                <a href="{{ path('products', {'_locale': app.request.locale}) }}" class="h5 link-arrow text-white">смотреть
                                                    все проекты <i class="icon icon-chevron-right"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="pp-scrollable section section-4">
            <div class="scroll-wrap">
                <div class="scrollable-content">
                    <div class="vertical-centred">
                        <div class="boxed boxed-inner">
                            <div class="vertical-title text-dark hidden-xs hidden-sm"><span>Наши партнеры</span></div>
                            <div class="boxed">
                                <div class="container">
                                    <div class="intro overflow-hidden">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h2 class="title-uppercase">Наши партнеры</h2>
                                                <div class="row-partners">
                                                    <div class="col-partner">
                                                        <div class="partner-inner"><img alt=""
                                                                                        src="{{ asset('images/partners/1.png') }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-partner">
                                                        <div class="partner-inner"><img alt=""
                                                                                        src="{{ asset('images/partners/2.png') }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-partner">
                                                        <div class="partner-inner"><img alt=""
                                                                                        src="{{ asset('images/partners/3.png') }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-partner">
                                                        <div class="partner-inner"><img alt=""
                                                                                        src="{{ asset('images/partners/4.png') }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-partner">
                                                        <div class="partner-inner"><img alt=""
                                                                                        src="{{ asset('images/partners/5.png') }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-partner">
                                                        <div class="partner-inner"><img alt=""
                                                                                        src="{{ asset('images/partners/4.png') }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-partner">
                                                        <div class="partner-inner"><img alt=""
                                                                                        src="{{ asset('images/partners/3.png') }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-partner">
                                                        <div class="partner-inner"><img alt=""
                                                                                        src="{{ asset('images/partners/2.png') }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-partner">
                                                        <div class="partner-inner"><img alt=""
                                                                                        src="{{ asset('images/partners/1.png') }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-partner">
                                                        <div class="partner-inner"><img alt=""
                                                                                        src="{{ asset('images/partners/5.png') }}">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="pp-scrollable text-white section section-5">
            <div class="scroll-wrap">
                <div class="section-bg" style="background-image:url('{{ asset('images/bg/bg3.jpg') }}');"></div>
                <div class="scrollable-content">
                    <div class="vertical-centred">
                        <div class="boxed boxed-inner">
                            <div class="vertical-title hidden-xs hidden-sm"><span>testimonials</span></div>
                            <div class="boxed">
                                <div class="container">
                                    <div class="intro">
                                        <div class="row">
                                            <div class="col-md-6 col-lg-5">
                                                <span class="icon-quote ion-quote"></span>
                                                <h2 class="title-uppercase text-white">Отзывы клиентов</h2>
                                            </div>
                                            <div class="col-md-5 col-lg-5  col-md-offset-1 col-lg-offset-2">
                                                <div class="review-carousel owl-carousel">
                                                    <div class="review-carousel-item">
                                                        <div class="text" >
                                                            <p>“ Заказывала фасады и корпуса Рим-Венециано для двух встроенных шкафов по 3 м+-. Отдельное огромное спасибо менеджеру Оле за квалифицированную консультацию, ответы на все вопросы, помощь! Остались очень довольны. За такую цену такую красоту приобрели! Волновались за доставку зеркальных фасадов, но все доставили в целости и сохранности! Советую всем! Не пожалеете!"</p>
                                                        </div>
                                                        <div class="review-author">
                                                            <div class="author-name">Elisa</div>
                                                            <i>Apartment view lake at Brooklyn</i>
                                                        </div>
                                                    </div>
                                                    <div class="review-carousel-item">
                                                        <div class="text">
                                                            <p>“ Заказала кухню Колор-микс. Менеджер,чудесная девочка Оля, всё просчитала,нарисовала план и подсказала по комплектации ящиков.Приехала моя кухня без корпуса нижней тумбы.Прислали её бесплатно,через день,но сборку пришлось отложить,так как на этот ящик крепится столешница с евростыком. Дальше стали собирать,оказалось,что в фасаде под посудомойку,сделали отверстия под петли!! Фасады отлично прокрашены,без претензий, надеюсь что кухня прослужит своё без каких либо непоправимых проблем."</p>
                                                        </div>
                                                        <div class="review-author">
                                                            <div class="author-name">Amanda</div>
                                                            <i>Apartment view lake at Brooklyn</i>
                                                        </div>
                                                    </div>
                                                    <div class="review-carousel-item">
                                                        <div class="text">
                                                            <p>“ Очень хорошая и порядочная фирма. В срок, а самое главное качественно выполняют работу. Особое спасибо менеджеру Оле. Она работает даже поздно вечером. Рекомендую.В Житомире нет магазина в котором было бы дешевле."</p>
                                                        </div>
                                                        <div class="review-author">
                                                            <div class="author-name">John</div>
                                                            <i>Apartment view lake at Brooklyn</i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="pp-scrollable section section-6">
            <div class="scroll-wrap">
                <div class="scrollable-content">
                    <div class="vertical-centred">
                        <div class="boxed boxed-inner">
                            <div class="vertical-title text-dark hidden-xs hidden-sm"><span>{% trans %}Контакти{% endtrans %}</span></div>
                            <div class="boxed">
                                <div class="container">
                                    <div class="intro overflow-hidden">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h2 class="title-uppercase">{% trans %}Наша адреса{% endtrans %}</h2>
                                                <div id="map" class="map-2"></div>
                                                <div class="contact-info">
                                                    <div class="row-contact-info row">
                                                        <div class="col-contact-info col-md-6 col-lg-4">
                                                            <div class="row">
                                                                <h3 class="col-sm-3 col-md-4">Електронна пошта: </h3>
                                                                <div class="col-right col-sm-8 col-md-7 col-sm-offset-1 col-md-offset-1">
                                                                    {% if contacts.isEmailShow == true %}
                                                                    <div class="contact-info-row col-sm-6 col-md-12">
                                                                        <strong class="text-dark">{{ contacts.firstEmailTitle  }}</strong><br>
                                                                        <a href="mailto:{{ contacts.email }}" style="font-size: 0.8rem">{{ contacts.email }}</a>
                                                                    </div>
                                                                    {% endif %}
                                                                    {% if contacts.isSecondEmailShow == true %}
                                                                        <div class="contact-info-row col-sm-6 col-md-12">
                                                                            <strong class="text-dark">{{ contacts.secondEmailTitle }}</strong><br>
                                                                            <a href="mailto:{{ contacts.secondEmail }}" style="font-size: 0.8rem">{{ contacts.secondEmail }}</a>
                                                                        </div>
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-contact-info col-md-6 col-lg-4">
                                                            <div class="row">
                                                                <h3 class="col-sm-3 col-md-4">{% trans %}Зв'яжіться з нами{% endtrans %}</h3>
                                                                <div class="col-right col-sm-8 col-md-7 col-sm-offset-1 col-md-offset-1">
                                                                    {% if contacts.isPhoneShow == true %}
                                                                    <div class="contact-info-row col-sm-6 col-md-12">
                                                                        <a href="tel:{{ contacts.phoneNumber }}"> <strong class="text-dark">{{ contacts.phoneNumberTitle }}</strong><br>
                                                                        {{ contacts.phoneNumber|replace({'+38': ''}) }} </a>
                                                                    </div>
                                                                    {% endif %}
                                                                    {% if contacts.isSecondPhoneNumberShow == true %}
                                                                    <div class="contact-info-row col-sm-6 col-md-12 ">
                                                                        <a href="tel:{{ contacts.secondPhoneNumber }}"> <strong class="text-dark">{{ contacts.secondPhoneNumberTitle }}</strong><br>
                                                                            {{ contacts.secondPhoneNumber|replace({'+38': ''}) }} </a>
                                                                    </div>
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                        </div>
                                                        {% if contacts.adress is not empty %}
                                                        <div class="col-contact-info col-md-6 col-lg-4">
                                                            <div class="row">
                                                                <h3 class="col-sm-3 col-md-4">{% trans %}Контакти{% endtrans %}</h3>
                                                                <div class="col-right col-sm-8 col-md-7 col-sm-offset-1 col-md-offset-1">
                                                                    <div class="contact-info-row col-sm-6 col-md-12" style="font-family: 'Microsoft Sans Serif', Tahoma, Arial, Verdana, Sans-Serif">
                                                                        {{ contacts.adress|raw }}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
